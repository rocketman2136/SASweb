{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "typeRoots": [
    "@types/*.d.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
  ]
}